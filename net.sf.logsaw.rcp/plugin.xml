<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="net.sf.logsaw.rcp.LogSawApplication">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="net.sf.logsaw.rcp.application"
            name="%product.name">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif,icons/alt_window_48.gif,icons/alt_window_64.gif,icons/alt_window_128.gif">
         </property>
         <property
               name="appName"
               value="LogSaw">
         </property>
         <property
               name="aboutImage"
               value="icons/about.png">
         </property>
         <property
               name="aboutText"
               value="LogSaw - a high-performance log viewer based on Eclipse&#x0A;&#x0A;Version: {0}&#x0A;Build Id: {1}&#x0A;&#x0A;Credits:&#x0A;Susanne Böhm&#x0A;Rainer Knörnschild&#x0A;Philipp Nanz&#x0A;&#x0A;(c) Copyright 2010 LogSaw project. All rights reserved.&#x0A;Visit http://logsaw.sourceforge.net/&#x0A;&#x0A;Powered by Eclipse http://www.eclipse.org/&#x0A;&#x0A;This product includes software developed by the&#x0A;Apache Software Foundation http://www.apache.org/">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
      <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="%preferencePages.general"
            class="org.eclipse.ui.ExtensionFactory:workbenchPreferencePage"
            id="org.eclipse.ui.preferencePages.Workbench">
      </page>
      <page
            category="org.eclipse.ui.preferencePages.Workbench"
            class="org.eclipse.ui.ExtensionFactory:newKeysPreferencePage"
            id="org.eclipse.ui.preferencePages.Keys"
            name="%preferencePages.keys">
      </page>
     </extension>
   <extension
         point="org.eclipse.ui.views">
		<view
			name="%pview.name"
			icon="icons/pview.gif"
			category="org.eclipse.ui"
			class="org.eclipse.ui.ExtensionFactory:progressView"
			id="org.eclipse.ui.views.ProgressView"/>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:help?after=additions">
         <menu
               label="%onlineHelpMenu.label">
            <command
                  commandId="org.eclipse.ui.browser.openBrowser"
                  label="%openHomepageCommand.label"
                  style="push">
               <parameter
                     name="url"
                     value="http://logsaw.sourceforge.net/redirect.php?target=Homepage">
               </parameter>
               <parameter
                     name="browserId"
                     value="logsaw">
               </parameter>
            </command>
            <command
                  commandId="org.eclipse.ui.browser.openBrowser"
                  label="%openFAQsCommand.label"
                  style="push">
               <parameter
                     name="url"
                     value="http://logsaw.sourceforge.net/redirect.php?target=FAQs">
               </parameter>
               <parameter
                     name="browserId"
                     value="logsaw">
               </parameter>
            </command>
            <command
                  commandId="org.eclipse.ui.browser.openBrowser"
                  label="%openHelpForumCommand.label"
                  style="push">
               <parameter
                     name="url"
                     value="http://logsaw.sourceforge.net/redirect.php?target=HelpForum">
               </parameter>
               <parameter
                     name="browserId"
                     value="logsaw">
               </parameter>
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
